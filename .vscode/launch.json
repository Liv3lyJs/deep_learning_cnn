    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal", 
            "args": [
                "--mode", "train",
                "--task", "detection",
                "--batch_size", "16", 
                "--epochs", "100",
                "--lr", "0.0004",
                "--early_stop", "25"
            ]
        }
    ]
}